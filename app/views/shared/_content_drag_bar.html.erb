<div data-controller="switch" class="border py-3 mx-auto w-100 p-1 row justify-content-between" data-id="<%= content.id %>">
  <div class="d-flex">
    <div class="px-1">
      <i class="fas fa-bars"></i>
    </div>
    <div class="px-1" name="title">
      <%= content.title %>
    </div>
  </div>
  <%= hidden_field_tag :edit_form, "edit_content_"+content.id.to_s, data: {target: "switch.form"} %>
  <div>
    <%= link_to "#", data: {action: "click->switch#toEdit"} do %>
      <i class="far fa-edit"></i>
    <% end %>
    <%= link_to content_path(content), method: 'delete', data: {confirm: "確定刪除此內容？" }, remote: true do %>
      <i class="far fa-trash-alt"></i>
    <% end %>
  </div>
</div>