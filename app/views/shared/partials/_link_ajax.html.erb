<%# for link render %>
<div class="link_group d-flex flex-wrap">
  <% @link_groups.each do |link_group| %>
    <div class="border m-2" style="width:234px">
      <div class="subject_bar p-2 d-flex justify-content-between">
        <div class="link_group_name">
          <div class="name">
            <%= link_group.name %>
          </div>
        </div>
        <div class="dropdown p-0 m-0" id="dropdownMenu">
          <div class="link_group_icon btn" data-toggle="dropdown">
            <svg class="bi bi-three-dots-vertical" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor">
            <path fill-rule="evenodd" d="M9.5 13a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zm0-5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zm0-5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="dropdown-menu" aria-labelledby="dropdownMenu">
            <%# AJAX update group %>
            <div class="dropdown-item btn" data-toggle="modal" data-target="#update-group-<%= link_group.id %>">
              編輯群組
            </div>
            <%# AJAX destroy group %>
            <div class="dropdown-item btn" data-toggle="modal" data-target="#destroy-group-<%= link_group.id %>">
              刪除群組
            </div>
            <%# AJAX create link %>
            <div class="dropdown-item btn" data-toggle="modal" data-target="#create-link-<%= link_group.id %>">
              新增Link
            </div>
          </div>
        </div>
      </div>
      <div>
        <div class="saved_links" id="link_group-<%= link_group.id %>">
          <% link_group.saved_links.sort{ |obj1,obj2| obj1.created_at <=> obj2.created_at }.each do |saved_link| %>
            <div class="saved_link" id="saved_link-<%= saved_link.id %>">
              <div class="link">
                <%= saved_link.subject %>
              </div>
              <div class="set_link">
                <%# AJAX edit link %>
                <div data-toggle="modal" data-target="#update-link-<%= saved_link.id %>">
                  <svg class="bi bi-pencil" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M11.293 1.293a1 1 0 011.414 0l2 2a1 1 0 010 1.414l-9 9a1 1 0 01-.39.242l-3 1a1 1 0 01-1.266-1.265l1-3a1 1 0 01.242-.391l9-9zM12 2l2 2-9 9-3 1 1-3 9-9z" clip-rule="evenodd"/>
                    <path fill-rule="evenodd" d="M12.146 6.354l-2.5-2.5.708-.708 2.5 2.5-.707.708zM3 10v.5a.5.5 0 00.5.5H4v.5a.5.5 0 00.5.5H5v.5a.5.5 0 00.5.5H6v-1.5a.5.5 0 00-.5-.5H5v-.5a.5.5 0 00-.5-.5H3z" clip-rule="evenodd"/>
                    </svg>
                </div>
                <%# AJAX destroy link %>
                <div data-toggle="modal" data-target="#destroy-link-<%= saved_link.id %>">
                  <svg class="bi bi-trash" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                      <path d="M5.5 5.5A.5.5 0 016 6v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm2.5 0a.5.5 0 01.5.5v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm3 .5a.5.5 0 00-1 0v6a.5.5 0 001 0V6z"/>
                      <path fill-rule="evenodd" d="M14.5 3a1 1 0 01-1 1H13v9a2 2 0 01-2 2H5a2 2 0 01-2-2V4h-.5a1 1 0 01-1-1V2a1 1 0 011-1H6a1 1 0 011-1h2a1 1 0 011 1h3.5a1 1 0 011 1v1zM4.118 4L4 4.059V13a1 1 0 001 1h6a1 1 0 001-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" clip-rule="evenodd"/>
                    </svg>
                </div>
              </div>
            </div>
          <% end %>

          <%# AJAX create link modal %>
            <div class="modal fade" id="create-link-<%= link_group.id %>" tabindex="-1" role="dialog" aria-labelledby="create_link" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <%= form_for(new_saved_link, url: channel_link_group_saved_links_path(link_group_id: link_group.id), method: "POST", remote: true ) do |f| %>
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="create-link-title">新增Link</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                          <%= f.label :url %>
                          <%= f.text_field :url, class: "link_url link_url-#{link_group.id} " %>
                        </div>
                        <div class="form-group">
                          <%= f.label :subject %>
                          <%= f.text_field :subject, class: "link_subject link_subject-#{link_group.id}" %>
                        </div>
                        <div class="form-group">
                          <%= f.label :summary %>
                          <%= f.text_field :summary, class: "link_summary link_summary-#{link_group.id}" %>
                        </div>
                    </div>

                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                      <%= f.submit class:"btn btn-primary" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <%#  %>

          <%# AJAX update link modal %>
            <% link_group.saved_links.each do |saved_link| %>
              <%= form_for(saved_link, url: channel_link_group_saved_link_path(channel_id: 1, link_group_id: link_group.id, id: saved_link.id), method: "PATCH", remote: true ) do |f| %>
                <div class="modal fade" id="update-link-<%= saved_link.id %>">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="update-link-title">編輯Link</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                          <div class="form-group">
                            <%= f.label :url %>
                            <%= f.text_field :url, class: "link_url link_url-#{saved_link.id} " %>
                          </div>
                          <div class="form-group">
                            <%= f.label :subject %>
                            <%= f.text_field :subject, class: "link_subject link_subject-#{saved_link.id}" %>
                          </div>
                          <div class="form-group">
                            <%= f.label :summary %>
                            <%= f.text_field :summary, class: "link_summary link_summary-#{saved_link.id}" %>
                          </div>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <%= f.submit class:"btn btn-primary" %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          <%#  %>

          <%# AJAX destroy link modal %>
            <% link_group.saved_links.each do |saved_link| %>
              <div class="modal fade" id="destroy-link-<%= saved_link.id %>" tabindex="-1" role="dialog" aria-labelledby="destroy-link" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="destroy-link-title">刪除Link</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      確定要刪除？
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                      <div type="button" class="btn btn-primary">
                        <%= link_to "Delete Saved link" , channel_link_group_saved_link_path(channel_id: 1, link_group_id: link_group.id, id: saved_link.id),  method: 'delete', remote: true %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <%#  %>

        </div>
      </div>
    </div>

    <%# AJAX create group modal %>
      <%= form_for(new_link_group, url: channel_link_groups_path, method: "POST", remote: true) do |f| %>
        <div class="modal fade" id="create-group" tabindex="-1" role="dialog" aria-labelledby="create-group" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="create-group-title">新增群組</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <div>
                  <%= f.text_field :name, class: "group_name" %>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <div>
                  <%= f.submit class:"btn btn-primary" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <%#  %>

    <%# AJAX update group modal %>
      <%= form_for(link_group, url: channel_link_group_path(id: link_group.id), method: "PATCH", remote: true) do |f| %>
        <div class="modal fade" id="update-group-<%= link_group.id %>" tabindex="-1" role="dialog" aria-labelledby="update-group-<%= link_group.id %>" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="update-group-title">編輯群組</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <div>
                  <%= f.text_field :name, class: "group_name" %>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <div>
                  <%= f.submit class:"btn btn-primary" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <%#  %>

    <%# AJAX destroy group modal %>
      <% @link_groups.each do |link_group| %>
        <div class="modal fade" id="destroy-group-<%= link_group.id %>" tabindex="-1" role="dialog" aria-labelledby="destroy-link" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="destroy-group-title">刪除群組</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                確定要刪除？
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <div type="button" class="btn btn-primary">
                  <%= link_to "刪除群組", channel_link_group_path(id: link_group.id), method: 'delete', remote: true %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <%#  %>

  <% end %>
</div>