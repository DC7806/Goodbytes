<%= form_for( content , remote: true, html: {style: "display: none"}) do |f| %>
  <% if title %>
    <%= f.label :title %>
    <%= f.text_field :title %>
  <% end %>
  <% if desc %>
    <%= f.label :desc %>
    <%= f.text_field :desc %>
  <% end %>
  <% if url %>
    <%= f.label :url %>
    <%= f.text_field :url %>
  <% end %>
  <%= f.submit "OK", data: {controller: "switch", action: "click->switch#toDrag"} %>
<% end %>