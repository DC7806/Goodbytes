
<% case type %>
<% when :show %>
<div class="content container w-75" data-id="<%= content.id %>">
  <div class="row">
    <h3 class="content-title"><%= content.display_title %></h3>
  </div>
  <div class="row"><span class="border w-25"></span></div>
  <div class="row">
    <p class="content-desc"><%= content.display_desc %></p>
  </div>
</div>

<% when :form %>
<%= render_edit_form content,
                     :title, :desc
%>
<% when :drag %>
  <%= render_drag_bar content, 
                      content.display_title.limit(10),
                      :title, :desc
  %>
<% end %>