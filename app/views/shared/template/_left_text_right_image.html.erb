
<% case type %>
<% when :show %>

  <% comment do %>
    <div class="content d-flex" data-id="<%= content.id %>">
      <div class="col-6">
        <p class="content-desc"><%= content.display_desc %></p>
      </div>
      <div class="col-6 my-auto content-img">
        <% if content.image.present? %>
          <%= image_tag content.image.url, class: "w-100"  %>
        <% else %>
          <%= image_tag "img_cover_big.jpg", class: "w-100" %>
        <% end %>
      </div>
    </div>
  <% end %>

<!-- 右圖左文2 -->
  <div class="content" data-id="<%= content.id %>" style="padding: 1rem 0;margin:0px auto;max-width:600px;">
    <table align="center" border="0" cellpadding="0" cellspacing="0" role="presentation" style="width:100%;">
      <tbody>
        <tr>
          <td align="left" valign="top" >
            <% if content.image.present? %>
              <%= image_tag content.image.url, style: "padding-bottom: 20px; max-width: 340px", align: "right", border: 0  %>
            <% else %>
              <%= image_tag "img_cover.jpg", style: "padding-bottom: 20px; max-width: 340px", align: "right", border: 0 %>
            <% end %>
            <div style="color:#525252;display: block;font-size: 18px; line-height: 2; margin-bottom: 15px; margin-top: 0; word-break: break-word">
              <%= content.display_desc %>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

<% when :form %>
  <%= render_edit_form content,
                      :desc, :image
  %>
<% when :drag %>
  <%= render_drag_bar content, 
                      "Image: " + content.display_desc.limit(7)
  %>
<% end %>