
<div class="user-section align-middle">
    <% if user_signed_in? %>
      <%# 和使用者打招呼 %>
      <%= greet %> ,
      <strong><%= current_user.name.present? ? current_user.name.limit(30) : current_user.email %></strong>
    <% else %>
      <%= link_to "Sign up", new_user_registration_path %> |
      <%= link_to "Sign in", new_user_session_path, class: 'navbar-link'  %>
    <% end %>
</div>


