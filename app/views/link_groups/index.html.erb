<div class="link p-2">

  <div class="border">
    <%= link_to "新增群組", new_organization_channel_link_group_path %>
  </div>

  <div class="link_group d-flex flex-wrap">
    <% @link_groups.each do |link_group| %>
      <div class="border m-2" style="width:234px">
        <div class="subject_bar p-2 d-flex justify-content-between">

          <div class="link_group_name">
            <div class="name">
              <%= link_group.name %>
            </div>
          </div>

          <div class="dropdown p-0 m-0" id="dropdownMenu">
            <div class="link_group_icon btn" data-toggle="dropdown">
              <svg class="bi bi-three-dots-vertical" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor">
              <path fill-rule="evenodd" d="M9.5 13a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zm0-5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zm0-5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z" clip-rule="evenodd"/>
              </svg>
            </div>

            <div class="dropdown-menu" aria-labelledby="dropdownMenu">
              <div class="dropdown-item btn">
                <%= link_to "修改群組", edit_organization_channel_link_group_path(id: link_group.id) %>
              </div>
              <div class="dropdown-item btn">
                <%= link_to "刪除群組", organization_channel_link_group_path(id: link_group.id), method: 'delete', data: {confirm: "確認刪除？" } %>
              </div>
              <div class="dropdown-item btn newlink">
                <%= link_to "新增Link", new_organization_channel_link_group_saved_link_path(link_group_id: link_group.id) %>
              </div>
              <%# 新增Link跳出視窗，嘗試打Ajax不過未成功 %>
                <div class="dropdown-item btn" data-toggle="modal" data-target="#add-link" data-whatever="modal">
                  新增Link
                </div>
              <%#  %>
            </div>

          </div>
        </div>

        <div>
          <div class="saved_links">

            <% link_group.saved_links.each do |saved_link| %>
              <div class="saved_link" id="sortable">
                <div class="link ui-state-default">
                  <%= saved_link.subject %>
                </div>
                <div class="set_link">
                  <div>
                    <%= link_to edit_organization_channel_link_group_saved_link_path(link_group_id: link_group.id, id: saved_link.id) do %>
                      <svg class="bi bi-pencil" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                      <path fill-rule="evenodd" d="M11.293 1.293a1 1 0 011.414 0l2 2a1 1 0 010 1.414l-9 9a1 1 0 01-.39.242l-3 1a1 1 0 01-1.266-1.265l1-3a1 1 0 01.242-.391l9-9zM12 2l2 2-9 9-3 1 1-3 9-9z" clip-rule="evenodd"/>
                      <path fill-rule="evenodd" d="M12.146 6.354l-2.5-2.5.708-.708 2.5 2.5-.707.708zM3 10v.5a.5.5 0 00.5.5H4v.5a.5.5 0 00.5.5H5v.5a.5.5 0 00.5.5H6v-1.5a.5.5 0 00-.5-.5H5v-.5a.5.5 0 00-.5-.5H3z" clip-rule="evenodd"/>
                      </svg>
                    <% end %>
                  </div>
              
                  <div>
                    <%= link_to organization_channel_link_group_saved_link_path(channel_id: 1, link_group_id: link_group.id, id: saved_link.id),  method: 'delete', data: {confirm: "確定要刪除連結？" } do %>
                      <svg class="bi bi-trash" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path d="M5.5 5.5A.5.5 0 016 6v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm2.5 0a.5.5 0 01.5.5v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm3 .5a.5.5 0 00-1 0v6a.5.5 0 001 0V6z"/>
                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 01-1 1H13v9a2 2 0 01-2 2H5a2 2 0 01-2-2V4h-.5a1 1 0 01-1-1V2a1 1 0 011-1H6a1 1 0 011-1h2a1 1 0 011 1h3.5a1 1 0 011 1v1zM4.118 4L4 4.059V13a1 1 0 001 1h6a1 1 0 001-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" clip-rule="evenodd"/>
                      </svg>
                    <% end %>
                  </div>
                </div>
              </div>


            <% end %>

          </div>
        </div>
      </div>
    <% end %>
    <%# 嘗試打Ajax不過未成功 %>
    <%= render "saved_links/add", link_groups: @link_groups %>
    <%#  %>
  </div>

</div>