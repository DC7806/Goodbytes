<header class="top-bar">
  <div class="left-section">
    <%= render "shared/breadcrumb" %>
      <li class="breadcrumb-item" aria-current="page">
        <%= link_to "Links", link_group_index_path %>
      </li>
    </ol>
  </div>
  <div class="right-section create-bar">
    <%= render "shared/user_section" %>
    <%# AJAX create group %>
      <div data-toggle="modal" data-target="#create-group" class="d-inline-block">
        <%= link_to "新增群組", new_link_group_path, remote: true, class:"btn btn-primary" %>
      </div>
  </div>
</header>

<div class="all-link">
  <div class="link">
    <%# AJAX create group modal %>
    <%= form_for(@link_group, url: link_group_index_path, method: "POST", remote: true) do |f| %>
      <div class="modal fade" id="create-group" tabindex="-1" role="dialog" aria-labelledby="create-group" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="create-group-title">新增群組</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div>
                <%= f.label :name %>
                <%= f.text_field :name, class: "group_name" %>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <div>
                <%= f.submit class:"btn btn-primary" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <%# AJAX render all group %>
    <%= render('shared/partials/link_ajax') %>

  </div>
</div>