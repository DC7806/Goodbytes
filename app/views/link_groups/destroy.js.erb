(function () {
  let ok = '<%= @ajax_destroy_group[:ok] %>' === 'true'
  let group_id = '<%= @link_group.id %>'

  if (ok) {
    $(`#destroy-link-${group_id}`).modal('hide')
    $('.modal-backdrop').hide()

    $(`#destroy-link-${group_id}`).remove();
    $('#create-group .group_name').val('');

    $(`.link_group`).replaceWith("<%= j render('shared/partials/create_link_group', link_groups: @link_groups, new_link_group: @channel.link_groups.new, saved_link: @saved_link, new_saved_link: @link_group.saved_links.new) %>")
  } else {
    alert("can't destroy")
  }
})()