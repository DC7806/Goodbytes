(function () {
  let ok = '<%= @ajax_update_group[:ok] %>' === 'true'

  if (ok) {
    let group_id = '<%= @link_group.id %>'
    $(`#update-group-${group_id}`).modal('hide')
    $('.modal-backdrop').hide()

    $(`#update-group .group_name`).val('<%= @link_group.name %>');

    $(`.link_group`).replaceWith("<%= j render('shared/partials/link_ajax', link_groups: @link_groups, new_link_group: @channel.link_groups.new, saved_link: @saved_link, new_saved_link: @link_group.saved_links.new) %>")
  } else {
    alert('<%= @ajax_update_group[:message] %>')
  }
})()