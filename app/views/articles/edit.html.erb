<nav class="top-bar">
  <div class="left-section">
    <%= render "shared/breadcrumb" %>
      <li class="breadcrumb-item" aria-current="page">
        <%= link_to "Articles" %>
      </li>
    </ol>
  </div>
  <div class="right-section">
    <%= render "shared/user_section" %>
    <%= link_to "Create Article", new_article_path, class:"btn btn-primary"%>
  </div>
</nav>

<div class="card border-info mb-3" >
  <%= form_for @article, url: article_path(@article) do |f| %>
    <div class="card-header">
      <%= f.label :subject, "Subject" %>
      <%= f.text_field :subject %>
    </div>
    <div class="card-body text-info">
      <%= f.submit "Edit Article" %>
    </div>
  <% end %>
</div>


<%= link_to "Back to article list", channel_path, class:"button" %>