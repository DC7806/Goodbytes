<%= content_for :side_bar do %>
  <div>Contents list.</div>
  <% @contents.each do |content| %>
    <%= form_for content, url: content_path(content), method: "patch" do |f| %>
      <input type="hidden" name="article_id" value="<%= @article.id %>">
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :desc %>
      <%= f.text_field :desc %>
      <%= f.submit %>
      <%= link_to content_path(content), method: 'delete', data: {confirm: "確定刪除此樣版？" } do %>
        <svg class="bi bi-trash" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
          <path d="M5.5 5.5A.5.5 0 016 6v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm2.5 0a.5.5 0 01.5.5v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm3 .5a.5.5 0 00-1 0v6a.5.5 0 001 0V6z"/>
          <path fill-rule="evenodd" d="M14.5 3a1 1 0 01-1 1H13v9a2 2 0 01-2 2H5a2 2 0 01-2-2V4h-.5a1 1 0 01-1-1V2a1 1 0 011-1H6a1 1 0 011-1h2a1 1 0 011 1h3.5a1 1 0 011 1v1zM4.118 4L4 4.059V13a1 1 0 001 1h6a1 1 0 001-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" clip-rule="evenodd"/>
        </svg>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<div class="card-header">
  <div class="row justify-content-between w-75 ml-3">
    <h3><%= @article.subject %></h3>
    <div>
      <%= link_to "Edit subject", edit_article_path(@article), method: :GET, class:"btn btn-primary btn-sm" %>
    </div>
  </div>
  <p>I'm article show.</p>
</div>
<div class="card-body">
  <% @contents.each do |content| %>
    <h5 class="card-title">
      <%= link_to content.title %>
      <%= link_to content.desc %>
    </h5>
  <% end %>
</div>