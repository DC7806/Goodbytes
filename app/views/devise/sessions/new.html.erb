<%= link_to root_path do %>
<%= image_tag("goodbytes-logo.png", :alt => "branding logo", class:"landing_navbar__logo") %>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "電子信箱" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "請輸入您的電子信箱"  %>
  </div>

  <div class="field">
    <%= f.label :password, "密碼" %><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "請留意英文大小寫" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "記住我" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "登入Goodbytes" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>