<% if resource.errors.any? %>
  <% flash.alert = resource.errors.full_messages.join("\n") %>
<% end %>
<div class="edit wrapper"> 
  <section class="account_setting_wrapper">
    <div class="card">
      <div class="card-header text-center">
        <ul class="nav nav-tabs">
          <li class="nav-item">
          <%= link_to "個人資料", edit_user_registration_path, class:"nav-link active" %>
          </li>
          <li class="nav-item">
          <%= link_to "組織資料", edit_organization_path, class:"nav-link" %>
          </li>
          <li class="nav-item">
          <%= link_to "頻道資料", edit_channel_path, class:"nav-link" %>
          </li>
        </ul>
      </div>
    </div>
    <div class="card">
      <div class="card-header text-center subtitle">
        <h6 class="card-title m-0">您收到的邀請</h6>
      </div>
      <div class="card-body text-center">
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th scope="col">寄件者</th>
              <th scope="col">邀請來源</th>
              <th scope="col">組織/頻道名稱</th>
              <th scope="col">動作</th>
            </tr>
          </thead>
          <tbody>
            <% @messages.each do |invite| %>
            <tr>
              <td><%= invite.sender.email %></td>
              <td><%= invite.type_in_chinese %></td>
              <td><%= invite.item.name %></td>
              <td><%= link_to "同意", "/#{invite.item_type.downcase}/role/#{invite.token}", class:"btn btn-outline-secondary" %>
                  <%= link_to "拒絕", cancel_invite_path(token: invite.token), method: 'delete', class:"btn btn btn-outline-info" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div> 
    </div>
    <div class="card">
      <div class="card-header text-center subtitle">
        <h6 class="card-title m-0">編輯個人資料</h6>
      </div>
      <div class="card-body user_form">
      
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            
          
            <div class="field">
              <%= f.label :email, "電子信箱" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
            </div>
          
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>此信箱確認中<%= resource.unconfirmed_email %></div>
            <% end %>
          
            <div class="field">
              <%= f.label :password, " 輸入新密碼" %> (如不修改請留白)<br />
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %> <small id="emailHelp" class="form-text text-muted"><% if @minimum_password_length %>
                (長度至少<%= @minimum_password_length %>位)
              <% end %></small>
            </div>
          
            <div class="field">
              <%= f.label :password_confirmation, "確認新密碼" %> (如不修改請留白)<br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
            </div>
          
            <div class="field">
              <%= f.label :current_password, "輸入原密碼" %> <br />
              <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control" %>
            </div>
          
            <p class="actions">
              <%= f.submit "送出", class:"btn btn-outline-secondary" %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</div>