<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link rel="stylesheet" href="https://use.typekit.net/bgh3rys.css">
    <title>Goodbytes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('mail_1.png') %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="layout">
      <aside class="sidebar content-sidebar p-0 bg-white">
        <% if user_signed_in? %>
          <nav class="sidebar__menu article__menu">
            <div class="card border-0">
                <div class="card-header article-back-list  rounded-0">
                  <%= link_to "Back to Articles list", root_path %>
                </div>
              <ul class="list-group list-group-flush">
                
                <%= yield :side_bar %>
              </ul>
            </div>
          </nav>
        <% end %>
      </aside>

      <div class="article-sidebar-blank"></div>
      
      <main>
        <div class="container-fluid">
          <div class="wrap">
            <%= render "shared/flash" %>

              <div class="replace replace-article">
                <%= yield %>
              </div>

          </div>
        </div>
      </main>
      
    </div>

  </body>
</html>
